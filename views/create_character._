<script type="text/javascript" src="/rj/create_character.js"></script>
<script type="text/javascript" src="/rj/hexagon.js"></script>
<link href="/rs/create_character.css" rel="stylesheet"/>
<div class="wizard_wrapper">
    <form role="form">
        <fieldset>
            <div class="step active" step="1">
                <div class="title">Gender:</div>
                <div class="list-group gender">
                    <a href="#" class="list-group-item" fvalue="male">
                        <div class="symbol">♀</div>
                        Male</a>
                    <a href="#" class="list-group-item" fvalue="female">
                        <div class="symbol">♂</div>
                        Female</a>
                </div>
                <div class="next btn">Onwards</div>
            </div>
            <div class="step" step="2">
                <div class="title">
                    Abilities:
                </div>
                <div class="abilities_controls">
                    <div class="plusminus"><a href="#" ability="str" modifier="1">+</a> / <a ability="str" modifier="-1" href="#">-</a></div>
                    <div class="panel l">
                        <div class="input-group">
                            <span class="input-group-addon">Intelligence:</span>
                            <input id="int_id" name="int_id" class="form-control" placeholder="0" type="text">
                        </div>
                        <div class="input-group">
                            <span class="input-group-addon">Wisdom:</span>
                            <input id="wis_id" name="wis_id" class="form-control" placeholder="0" type="text">
                        </div>
                        <div class="input-group">
                            <span class="input-group-addon">Charisma:</span>
                            <input id="cha_id" name="cha_id" class="form-control" placeholder="0" type="text">
                        </div>
                    </div>
                    <div class="panel r">
                        <div class="input-group">
                            <span class="input-group-addon">Strength:</span>
                            <input id="str_id" name="str_id" class="form-control" placeholder="0" type="text">
                        </div>
                        <div class="input-group">
                            <span class="input-group-addon">Dexterity:</span>
                            <input id="dex_id" name="dex_id" class="form-control" placeholder="0" type="text">
                        </div>
                        <div class="input-group">
                            <span class="input-group-addon">Constitution:</span>
                            <input id="con_id" name="con_id" class="form-control" placeholder="0" type="text">
                        </div>
                    </div>
                </div>
                <canvas id="hexagon" width="420" height="400"></canvas>

                <div id="bank_label"></div>

                <div class="draw_hex btn">Draw Hexagon</div>
                <div class="next btn">Onwards</div>
            </div>
            <div class="step" step="3"></div>

        </fieldset>
    </form>
</div>
<div class="canvas_holder">

</div>