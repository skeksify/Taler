<script type="text/javascript" src="/rj/create_character.js"></script>
<script type="text/javascript" src="/rj/hexagon.js"></script>
<link href="/rs/create_character.css" rel="stylesheet"/>
<div class="wizard_wrapper">
    <form role="form">
        <fieldset>
            <div class="step active" step="1">
                <div class="title">Gender:</div>
                <div class="list-group gender">
                    <a href="#" class="list-group-item" fvalue="male">
                        <div class="symbol">♀</div>
                        Male
                    </a>
                    <a href="#" class="list-group-item" fvalue="female">
                        <div class="symbol">♂</div>
                        Female
                    </a>
                </div>
                <div class="next btn">Onwards</div>
            </div>
            <div class="step" step="2">
                <div class="title">
                    Abilities:
                </div>
                <div class="abilities_controls">
                    <div class="plusminus str"><a href="#" ability="str" modifier="1">+</a> / <a ability="str" modifier="-1" href="#">-</a></div>
                    <div class="plusminus dex"><a href="#" ability="dex" modifier="1">+</a> / <a ability="dex" modifier="-1" href="#">-</a></div>
                    <div class="plusminus con"><a href="#" ability="con" modifier="1">+</a> / <a ability="con" modifier="-1" href="#">-</a></div>
                    <div class="plusminus int"><a href="#" ability="int" modifier="1">+</a> / <a ability="int" modifier="-1" href="#">-</a></div>
                    <div class="plusminus wis"><a href="#" ability="wis" modifier="1">+</a> / <a ability="wis" modifier="-1" href="#">-</a></div>
                    <div class="plusminus cha"><a href="#" ability="cha" modifier="1">+</a> / <a ability="cha" modifier="-1" href="#">-</a></div>
                    <div class="panel l">
                        <div class="input-group">
                            <span class="input-group-addon">Intelligence:</span>
                            <input id="int_id" name="int" class="form-control" placeholder="0" type="text" disabled>
                        </div>
                        <div class="input-group">
                            <span class="input-group-addon">Wisdom:</span>
                            <input id="wis_id" name="wis" class="form-control" placeholder="0" type="text" disabled>
                        </div>
                        <div class="input-group">
                            <span class="input-group-addon">Charisma:</span>
                            <input id="cha_id" name="cha" class="form-control" placeholder="0" type="text" disabled>
                        </div>
                    </div>
                    <div class="panel r">
                        <div class="input-group">
                            <span class="input-group-addon">Strength:</span>
                            <input id="str_id" name="str" class="form-control" placeholder="0" type="text" disabled>
                        </div>
                        <div class="input-group">
                            <span class="input-group-addon">Dexterity:</span>
                            <input id="dex_id" name="dex" class="form-control" placeholder="0" type="text" disabled>
                        </div>
                        <div class="input-group">
                            <span class="input-group-addon">Constitution:</span>
                            <input id="con_id" name="con" class="form-control" placeholder="0" type="text" disabled>
                        </div>
                    </div>
                </div>
                <canvas id="hexagon" width="420" height="400"></canvas>

                <div id="bank_label"></div>

                <!--div class="draw_hex btn">Draw Hexagon</div-->
                <div class="next back btn">Backwards</div>
                <div class="next btn">Onwards</div>
            </div>
            <div class="step" step="3">
                <div class="title">Alignment:</div>
                <div class="list-group alignment">
                    <a href="#" class="list-group-item" fvalue="good">
                        <div class="symbol"><img src="../ri/flame_good.jpg" /></div>
                        Good
                    </a>
                    <a href="#" class="list-group-item" fvalue="neutral">
                        <div class="symbol"><img src="../ri/flame_neu.jpg" /></div>
                        Neutral
                    </a>
                    <a href="#" class="list-group-item" fvalue="evil">
                        <div class="symbol"><img src="../ri/flame_evil.jpg" /></div>
                        Evil
                    </a>
                </div>
                <div class="next back btn">Backwards</div>
                <div class="next btn">Onwards</div>
            </div>

            <div class="step" step="4">
                <div class="title">Portrait:</div>
                <div class="portraits-wrapper">
                    <div class="groups">
                        <div class="males">
                            <img src="../ri/portraits/m1.jpg" portrait_id="1" />
                            <img src="../ri/portraits/m2.jpg" portrait_id="2" />
                            <img src="../ri/portraits/m3.jpg" portrait_id="3" />
                            <img src="../ri/portraits/m4.jpg" portrait_id="4" />
                        </div>
                        <div class="females">
                            <img src="../ri/portraits/f1.jpg" portrait_id="1" />
                            <img src="../ri/portraits/f2.jpg" portrait_id="2" />
                            <img src="../ri/portraits/f3.jpg" portrait_id="3" />
                            <img src="../ri/portraits/f4.jpg" portrait_id="4" />
                        </div>
                    </div>
                </div>
                <div class="next back btn">Backwards</div>
                <div class="next btn">Onwards</div>
            </div>

            <div class="step" step="5">
                <div class="title">Name:</div>
                <div class="name-wrapper">
                    <div class="input-group">
                        <span class="input-group-addon">Character's Name:</span>
                        <input id="name_id" name="name" class="form-control" placeholder="" type="text" />
                    </div>
                </div>
                <div class="next back btn">Backwards</div>
                <div class="next btn">Onwards</div>
            </div>
        </fieldset>
    </form>
</div>
<div class="canvas_holder">

</div>