<link href="/rs/game_creator.css" rel="stylesheet"/>
<div class="container theme-showcase" role="main" id="create_game_form">
    <form role="form">
        <fieldset>
            <div class="jumbotrono">
                <!-- Form Name -->
                <h2><%=headerTitle%></h2>
                <!-- Text input-->
                <div class="control-group">
                    <label class="control-label" for="game_name">Game Name:</label>
                    <div class="controls">
                        <input id="game_name" name="game_name" type="text" placeholder="Choose a name for your game" class="form-control" required="">
                    </div>
                </div>
                <!-- Textarea -->
                <div class="control-group">
                    <label class="control-label" for="game_desc">Description</label>
                    <div class="controls">
                        <textarea id="game_desc" name="game_desc" class="form-control"></textarea>
                        <p class="help-block">Provide your players with an incentive to play your game!</p>
                    </div>
                </div>
                <!-- Button -->
                <div class="control-group">
                    <div class="controls">
                        <button id="submit_game" name="submit_game" class="btn btn-inverse">Begin!</button>
                    </div>
                </div>
            </div>
        </fieldset>
    </form>
</div>

